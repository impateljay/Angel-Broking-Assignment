<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Graph5Activity"
        android:background="@color/colorPrimary">

    <TextView
            android:text="545.0"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
    <TextView
            android:text="BID"
            android:textColor="@color/colorSlateGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
    />
    <TextView
            android:text="546.0"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
    <TextView
            android:text="ASK"
            android:textColor="@color/colorSlateGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"/>
    <TextView
            android:text="+6,35%"
            android:textColor="@color/colorGreenBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
    <TextView
            android:text="CHANGES"
            android:textColor="@color/colorSlateGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="@+id/textView5"/>
    <TextView
            android:text="+32.50"
            android:textColor="@color/colorGreenBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
    <TextView
            android:text="BITCOIN"
            android:letterSpacing=".15"
            android:textSize="14sp"
            android:textColor="@color/colorDodgerBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"/>
    <TextView
            android:text="$ 536.0"
            android:textColor="@color/colorDodgerBlue"
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView8"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:text="HIGH"
            android:textSize="12sp"
            android:textColor="@color/colorSlateGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <TextView
            android:text="1,097.00"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintEnd_toEndOf="@+id/textView10"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="LOW"
            android:textColor="@color/colorSlateGrey"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintEnd_toEndOf="@+id/textView10"/>
    <TextView
            android:text="1,017.30"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintEnd_toEndOf="@+id/textView10"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <ImageView
            android:src="@drawable/divider"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:textColor="@color/colorDodgerBlue"
            android:id="@+id/textView14" app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/textView8"/>
    <TextView
            android:text="12/28/2017 07:40 PM"
            android:textColor="@color/colorSlateGrey"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"/>
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:weightSum="95" android:id="@+id/linearLayout5">
        <Button
                android:text="BUY"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:background="@color/colorDodgerBlue"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:background="@color/colorPrimary"
                android:enabled="false"/>
        <Button
                android:text="SELL"
                android:layout_height="wrap_content"
                android:id="@+id/button3" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:background="@color/colorCharcoalGrey"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/line" app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintStart_toStartOf="@+id/textView9"
            android:weightSum="60" android:id="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp">
        <Button
                android:text="10MIN"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorSlateGrey"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="4dp"
                android:id="@+id/button_ten_min"/>
        <Button
                android:text="1H"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorSlateGrey"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="4dp"
                android:id="@+id/button_hour"/>
        <Button
                android:text="24H"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorDodgerBlue"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="4dp"
                android:id="@+id/button_day"/>
        <Button
                android:text="1M"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorSlateGrey"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="4dp"
                android:id="@+id/button_month"/>
        <Button
                android:text="3M"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorSlateGrey"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="4dp"
                android:id="@+id/button_three_months"/>
        <Button
                android:text="1Y"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorSlateGrey"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="4dp"
                android:id="@+id/button_year"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintBottom_toTopOf="@id/linearLayout5"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="32dp"
                android:contentDescription="logo"
                android:layout_height="32dp"
                android:layout_marginStart="32dp"
                android:layout_gravity="start"
                android:src="@drawable/ic_menu_black_24dp"/>
        <ImageView
                android:layout_width="32dp"
                android:contentDescription="logo"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_currency_bitcoin"/>
        <ImageView
                android:layout_width="32dp"
                android:contentDescription="logo"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_notifications_none_black_24dp"/>
    </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>